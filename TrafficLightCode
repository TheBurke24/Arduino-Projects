// Circuit 1 by Alex Burke (1/29/24)
// Using LEDs to make a traffic light.
// Encountered issues with delay placement, but other than that no issues.

void setup() {
  // initialize digital pins 13,10,8 as an output.
  pinMode(13, OUTPUT);
  pinMode(10, OUTPUT);
  pinMode(18, OUTPUT);
}

// the loop function runs over and over again forever
void loop() {
  digitalWrite(13, HIGH);  // turn the LED on 
  delay(5000);             // delay for five seconds
  digitalWrite(13, LOW);   // turn the LED off 
 
  digitalWrite(10, HIGH);  
  delay(2000);                      
  digitalWrite(10, LOW);   
  
  digitalWrite(8, HIGH);  
  delay(5000);                      
  digitalWrite(8, LOW);   
}
